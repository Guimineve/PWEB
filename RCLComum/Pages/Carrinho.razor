@page "/carrinho"
@using RCLComum.Services
@using RCLComum.Interfaces
@inject ICarrinhoService CarrinhoService

<div class="container mt-4">
    <h3>O Teu Carrinho</h3>

    @if (CarrinhoService.Itens.Count == 0)
    {
        <div class="alert alert-info">O teu carrinho está vazio. Vai às compras!</div>
        <a href="/" class="btn btn-primary">Voltar à Loja</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Preço</th>
                        <th>Qtd</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in CarrinhoService.Itens)
                    {
                        <tr>
                            <td>@item.Produto.Nome</td>
                            <td>@item.Produto.Preco.ToString("C")</td>
                            <td>@item.Quantidade</td>
                            <td>@item.Total.ToString("C")</td>
                            <td>
                                <button class="btn btn-danger btn-sm"
                                        @onclick="() => CarrinhoService.RemoverProduto(item.Produto)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3 p-3 bg-light rounded shadow-sm">
            <h4>Total: <span class="text-success">@CarrinhoService.ValorTotal.ToString("C")</span></h4>

            <button class="btn btn-success btn-lg">
                Finalizar Encomenda <i class="bi bi-check-circle"></i>
            </button>
        </div>
    }
</div>