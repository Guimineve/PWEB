@page "/registar"

<div class="auth-fullscreen">
    <div class="auth-card shadow-lg">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill fs-1 text-success"></i>
            <h2 class="fw-bold mt-2">Criar Conta</h2>
            <p class="text-muted">Junta-te à comunidade MyColl</p>
        </div>

        <form>
            <div class="mb-3">
                <label class="form-label">Nome de Utilizador</label>
                <input type="text" class="form-control" placeholder="O teu nome">
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="exemplo@email.com">
            </div>
            <div class="row mb-4">
                <div class="col">
                    <label class="form-label">Palavra-passe</label>
                    <input type="password" class="form-control" placeholder="********">
                </div>
                <div class="col">
                    <label class="form-label">Confirmar</label>
                    <input type="password" class="form-control" placeholder="********">
                </div>
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm">Criar Conta</button>

            <div class="text-center mt-4">
                <p class="mb-0">Já tens conta? <a href="login" class="text-success fw-bold">Faz Login</a></p>
            </div>
        </form>
    </div>
</div>