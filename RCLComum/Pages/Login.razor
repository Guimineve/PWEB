@page "/login"

<div class="auth-fullscreen">
    <div class="auth-card shadow-lg">
        <div class="text-center mb-4">
            <i class="bi bi-person-circle fs-1 text-primary"></i>
            <h2 class="fw-bold mt-2">Bem-vindo de volta</h2>
            <p class="text-muted">Introduz os teus dados para aceder à coleção</p>
        </div>

        <form>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control form-control-lg" placeholder="exemplo@email.com">
            </div>
            <div class="mb-4">
                <label class="form-label">Palavra-passe</label>
                <input type="password" class="form-control form-control-lg" placeholder="********">
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">Entrar</button>

            <div class="text-center mt-4">
                <p class="mb-0">Ainda não tens conta? <a href="registar" class="text-primary fw-bold">Regista-te aqui</a></p>
            </div>
        </form>
    </div>
</div>