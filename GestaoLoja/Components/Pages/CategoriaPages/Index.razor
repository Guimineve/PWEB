@page "/categorias"

@attribute [Authorize(Roles = "Admin,Funcionario")]

@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@implements IAsyncDisposable

<PageTitle>Gestão de Categorias</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="m-0 fw-bold text-primary">Gestão de Categorias</h3>
        <a href="categorias/create" class="btn btn-link p-0" title="Novo Produto">
            <img src="/img/novo.png" style="height:50px" alt="Novo" />
        </a>
    </div>

    <div class="card bg-light border-0 mb-4">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Pesquisar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Nome da categoria..."
                               @bind="FiltroTexto" @bind:event="oninput" @onkeyup="CarregarDados" />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Filtrar por Pai</label>
                    <select class="form-select" @bind="FiltroPaiId" @bind:after="CarregarDados">
                        <option value="0">Todas</option>
                        <option value="-1">Raiz</option>
                        @foreach (var cat in ListaTodasCategorias)
                        {
                            <option value="@cat.Id">@cat.Nome</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Ordenar por</label>
                    <select class="form-select" @bind="OrdemOrdenacao" @bind:after="CarregarDados">
                        <option value="recente">Mais Recentes</option>
                        <option value="nome_az">Nome (A-Z)</option>
                        <option value="nome_za">Nome (Z-A)</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (CategoriasPaginadas == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>A carregar categorias...</p>
        </div>
    }
    else if (!CategoriasPaginadas.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-search fs-1 text-muted"></i>
            <h5 class="mt-3">Nenhuma categoria encontrada.</h5>
            <p>Tente alterar os filtros de pesquisa.</p>
        </div>
    }
    else
    {
        <div class="table-responsive bg-white rounded shadow-sm p-3">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;">Img</th>
                        <th>Nome</th>
                        <th>Categoria Pai</th>
                        <th>Produtos</th>
                        <th>Subcategorias</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in CategoriasPaginadas)
                    {
                        <tr>
                            <td>
                                @if (item.Imagem != null && item.Imagem.Length > 0)
                                {
                                    <img src="data:image/png;base64,@(Convert.ToBase64String(item.Imagem))"
                                         class="rounded" style="width: 40px; height: 40px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="/img/noproductstrans.png" style="width: 40px; opacity: 0.5" />
                                }
                            </td>
                            <td class="fw-bold">@item.Nome</td>
                            <td class="text-muted">
                                @if (item.CategoriaPai != null)
                                {
                                    <span class="badge bg-secondary">@item.CategoriaPai.Nome</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">Raiz</span>
                                }
                            </td>
                            <td>@(item.Produtos?.Count ?? 0)</td>
                            <td>@(item.SubCategorias?.Count ?? 0)</td>
                            <td class="text-end" style="white-space: nowrap;">
                                <a href="categorias/edit?id=@item.Id" title="Editar" class="me-2">
                                    <img src="/img/editicon.png" style="height:30px" alt="Editar" />
                                </a>

                                <a href="categorias/details?id=@item.Id" title="Detalhes" class="me-2">
                                    <img src="/img/detailsicon.png" style="height:30px" alt="Detalhes" />
                                </a>

                                <a href="categorias/delete?id=@item.Id" title="Apagar">
                                    <img src="/img/deleteicon.png" style="height:30px" alt="Apagar" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <span class="text-muted small">
                A mostrar @CategoriasPaginadas.Count registos (Página @PaginaAtual de @TotalPaginas)
            </span>
            <div class="btn-group">
                <button class="btn btn-outline-secondary btn-sm"
                        disabled="@(PaginaAtual == 1)"
                        @onclick="PaginaAnterior">
                    <i class="bi bi-chevron-left"></i> Anterior
                </button>
                <button class="btn btn-outline-secondary btn-sm"
                        disabled="@(PaginaAtual == TotalPaginas || TotalPaginas == 0)"
                        @onclick="ProximaPagina">
                    Próximo <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationDbContext context = default!;

    private List<Categoria>? CategoriasPaginadas;
    private List<Categoria> ListaTodasCategorias = new();

    // Filtros
    private string FiltroTexto = "";
    private int FiltroPaiId = 0;
    private string OrdemOrdenacao = "nome_az";

    // Paginação
    private int PaginaAtual = 1;
    private int TamanhoPagina = 10;
    private int TotalPaginas = 1;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        ListaTodasCategorias = await context.Categorias.OrderBy(c => c.Nome).ToListAsync();
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        var query = context.Categorias
            .Include(c => c.CategoriaPai)
            .Include(c => c.Produtos)
            .Include(c => c.SubCategorias)
            .AsQueryable();

        // Filtro Texto
        if (!string.IsNullOrEmpty(FiltroTexto))
        {
            query = query.Where(c => c.Nome.Contains(FiltroTexto));
        }

        // Filtro Pai
        if (FiltroPaiId == -1)
        {
            query = query.Where(c => c.CategoriaPaiId == null);
        }
        else if (FiltroPaiId > 0)
        {
            query = query.Where(c => c.CategoriaPaiId == FiltroPaiId);
        }

        // Ordenação
        query = OrdemOrdenacao switch
        {
            "nome_az" => query.OrderBy(c => c.Nome),
            "nome_za" => query.OrderByDescending(c => c.Nome),
            _ => query.OrderByDescending(c => c.Id) // Recentes
        };

        // Paginação
        int totalItens = await query.CountAsync();
        TotalPaginas = (int)Math.Ceiling(totalItens / (double)TamanhoPagina);
        if (TotalPaginas == 0) TotalPaginas = 1;
        if (PaginaAtual > TotalPaginas) PaginaAtual = TotalPaginas;

        CategoriasPaginadas = await query
            .Skip((PaginaAtual - 1) * TamanhoPagina)
            .Take(TamanhoPagina)
            .ToListAsync();
    }

    private async Task PaginaAnterior()
    {
        if (PaginaAtual > 1) { PaginaAtual--; await CarregarDados(); }
    }

    private async Task ProximaPagina()
    {
        if (PaginaAtual < TotalPaginas) { PaginaAtual++; await CarregarDados(); }
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}