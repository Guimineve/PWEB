@page "/categorias"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@implements IAsyncDisposable

<PageTitle>Categorias</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="m-0 fw-bold text-primary">Gestão de Categorias</h3>

        <a href="categorias/create" class="btn btn-link p-0" title="Nova Categoria">
            <img src="/img/novo.png" style="height:50px" />
        </a>
    </div>

    @if (CategoriasLista == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>A carregar dados...</p>
        </div>
    }
    else if (!CategoriasLista.Any())
    {
        <div class="alert alert-info">Não existem categorias registadas.</div>
    }
    else
    {
        <div class="d-none d-md-block table-responsive bg-white rounded shadow-sm p-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Imagem</th>
                        <th>Nome</th>
                        <th>Categoria Pai</th>
                        <th class="text-end" style="width: 180px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in CategoriasLista)
                    {
                        <tr>
                            <td>
                                @if (cat.Imagem != null && cat.Imagem.Length > 0)
                                {
                                    <img src="data:image/png;base64,@(Convert.ToBase64String(cat.Imagem))"
                                         class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="/img/noproductstrans.png" class="img-thumbnail" style="width: 60px;" />
                                }
                            </td>
                            <td class="fw-bold">@cat.Nome</td>
                            <td class="text-muted">
                                @(cat.CategoriaPai != null ? cat.CategoriaPai.Nome : "- Raiz -")
                            </td>
                            <td class="text-end">
                                <a href="categorias/edit?id=@cat.Id" title="Editar" class="me-2">
                                    <img src="/img/editicon.png" style="height:30px" />
                                </a>
                                <a href="categorias/details?id=@cat.Id" title="Detalhes" class="me-2">
                                    <img src="/img/detailsicon.png" style="height:30px" />
                                </a>
                                <a href="categorias/delete?id=@cat.Id" title="Apagar">
                                    <img src="/img/deleteicon.png" style="height:30px" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-md-none d-flex flex-column gap-3">
            @foreach (var cat in CategoriasLista)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body p-3 d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3" style="min-width: 0;">
                            @if (cat.Imagem != null)
                            {
                                <img src="data:image/*;base64,@(Convert.ToBase64String(cat.Imagem))"
                                     class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/img/noproductstrans.png" class="rounded-circle" style="width: 40px;" />
                            }

                            <div>
                                <h5 class="mb-0 fw-bold text-truncate">@cat.Nome</h5>
                                <small class="text-muted">
                                    @(cat.CategoriaPai != null ? "Pai: " + cat.CategoriaPai.Nome : "Raiz")
                                </small>
                            </div>
                        </div>

                        <div class="d-flex gap-2 ms-3">
                            <a href="categorias/edit?id=@cat.Id">
                                <img src="/img/editicon.png" style="height:25px" />
                            </a>
                            <a href="categorias/delete?id=@cat.Id">
                                <img src="/img/deleteicon.png" style="height:25px" />
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private ApplicationDbContext context = default!;
    private List<Categoria> CategoriasLista;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        CategoriasLista = await context.Categorias
            .Include(c => c.CategoriaPai)
            .OrderBy(c => c.Nome)
            .ToListAsync();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}