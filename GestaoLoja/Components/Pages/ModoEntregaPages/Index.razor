@page "/modosentrega"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@implements IAsyncDisposable

<PageTitle>Modos de Entrega</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="m-0 fw-bold text-primary">Modos de Entrega</h3>
        <a href="modosentrega/create" class="btn btn-link p-0" title="Novo Produto">
            <img src="/img/novo.png" style="height:50px" alt="Novo" />
        </a>
    </div>

    <div class="card bg-light border-0 mb-4">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label small text-muted fw-bold">Pesquisar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Nome ou detalhe ..."
                               @bind="FiltroTexto" @bind:event="oninput" @onkeyup="CarregarDados" />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Ordenar por</label>
                    <select class="form-select" @bind="OrdemOrdenacao" @bind:after="CarregarDados">
                        <option value="nome_az">Nome (A-Z)</option>
                        <option value="nome_za">Nome (Z-A)</option>
                        <option value="recente">Mais Recentes</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (ModosPaginados == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>A carregar dados...</p>
        </div>
    }
    else if (!ModosPaginados.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-search fs-1 text-muted"></i>
            <h5 class="mt-3">Nenhum modo de entrega encontrado.</h5>
            <p>Tente alterar a pesquisa.</p>
        </div>
    }
    else
    {
        <div class="table-responsive bg-white rounded shadow-sm p-3">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Detalhe</th>
                        <th>Produtos Associados</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ModosPaginados)
                    {
                        <tr>
                            <td class="fw-bold">@item.Nome</td>
                            <td class="text-muted">@item.Detalhe</td>
                            <td>@(item.Produtos?.Count ?? 0)</td>
                            <td class="text-end" style="white-space: nowrap;">
                                <a href="modosentrega/edit?id=@item.Id" title="Editar" class="me-2">
                                    <img src="/img/editicon.png" style="height:30px" alt="Editar" />
                                </a>

                                <a href="modosentrega/details?id=@item.Id" title="Detalhes" class="me-2">
                                    <img src="/img/detailsicon.png" style="height:30px" alt="Detalhes" />
                                </a>

                                <a href="modosentrega/delete?id=@item.Id" title="Apagar">
                                    <img src="/img/deleteicon.png" style="height:30px" alt="Apagar" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <span class="text-muted small">
                A mostrar @ModosPaginados.Count registos (Página @PaginaAtual de @TotalPaginas)
            </span>
            <div class="btn-group">
                <button class="btn btn-outline-secondary btn-sm"
                        disabled="@(PaginaAtual == 1)"
                        @onclick="PaginaAnterior">
                    <i class="bi bi-chevron-left"></i> Anterior
                </button>
                <button class="btn btn-outline-secondary btn-sm"
                        disabled="@(PaginaAtual == TotalPaginas || TotalPaginas == 0)"
                        @onclick="ProximaPagina">
                    Próximo <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationDbContext context = default!;
    private List<ModoEntrega>? ModosPaginados;

    // Filtros
    private string FiltroTexto = "";
    private string OrdemOrdenacao = "nome_az";

    // Paginação
    private int PaginaAtual = 1;
    private int TamanhoPagina = 10;
    private int TotalPaginas = 1;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        var query = context.ModosEntrega
            .Include(m => m.Produtos) // Para contar quantos produtos usam este modo
            .AsQueryable();

        // 1. Filtro Texto (Nome OU Detalhe)
        if (!string.IsNullOrEmpty(FiltroTexto))
        {
            query = query.Where(m => m.Nome.Contains(FiltroTexto) ||
                                   (m.Detalhe != null && m.Detalhe.Contains(FiltroTexto)));
        }

        // 2. Ordenação
        query = OrdemOrdenacao switch
        {
            "nome_az" => query.OrderBy(m => m.Nome),
            "nome_za" => query.OrderByDescending(m => m.Nome),
            _ => query.OrderByDescending(m => m.Id) // Recentes
        };

        // 3. Paginação
        int totalItens = await query.CountAsync();
        TotalPaginas = (int)Math.Ceiling(totalItens / (double)TamanhoPagina);
        if (TotalPaginas == 0) TotalPaginas = 1;
        if (PaginaAtual > TotalPaginas) PaginaAtual = TotalPaginas;

        ModosPaginados = await query
            .Skip((PaginaAtual - 1) * TamanhoPagina)
            .Take(TamanhoPagina)
            .ToListAsync();
    }

    private async Task PaginaAnterior()
    {
        if (PaginaAtual > 1) { PaginaAtual--; await CarregarDados(); }
    }

    private async Task ProximaPagina()
    {
        if (PaginaAtual < TotalPaginas) { PaginaAtual++; await CarregarDados(); }
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}