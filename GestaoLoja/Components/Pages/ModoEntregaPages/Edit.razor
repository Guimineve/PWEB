@page "/modosentrega/edit"

@attribute [Authorize(Roles = "Admin,Funcionario")]

@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Editar Modo de Entrega</PageTitle>

<h1>Editar Modo</h1>
<hr />

@if (ModoEntrega is null)
{
    <p><em>A carregar...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <EditForm Model="ModoEntrega" OnValidSubmit="UpdateModo" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <input type="hidden" name="ModoEntrega.Id" value="@ModoEntrega.Id" />

                <div class="mb-3">
                    <label for="nome" class="form-label">Nome:</label>
                    <InputText id="nome" @bind-Value="ModoEntrega.Nome" class="form-control" />
                    <ValidationMessage For="() => ModoEntrega.Nome" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="detalhe" class="form-label">Detalhe:</label>
                    <InputTextArea id="detalhe" @bind-Value="ModoEntrega.Detalhe" class="form-control" rows="3" placeholder="Descrição (Opcional)..." />
                    <ValidationMessage For="() => ModoEntrega.Detalhe" class="text-danger" />
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-link p-0 me-3" title="Gravar">
                        <img src="/img/saveicon.png" style="height:30px" />
                    </button>
                    <a href="/modosentrega" class="btn btn-link p-0" title="Voltar">
                        <img src="/img/backicon.png" style="height:30px" />
                    </a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    public ModoEntrega? ModoEntrega { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ModoEntrega ??= await context.ModosEntrega.FirstOrDefaultAsync(m => m.Id == Id);

        if (ModoEntrega is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task UpdateModo()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ModoEntrega!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ModoExists(ModoEntrega!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/modosentrega");
    }

    bool ModoExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.ModosEntrega.Any(e => e.Id == id);
    }
}