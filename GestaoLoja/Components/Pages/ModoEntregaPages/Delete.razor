@page "/modosentrega/delete"

@attribute [Authorize(Roles = "Admin,Funcionario")]

@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Apagar Modo de Entrega</PageTitle>

<div class="container mt-4">
    <h1 class="text-danger">Apagar Modo de Entrega</h1>

    @if (!string.IsNullOrEmpty(MensagemErro))
    {
        <div class="alert alert-danger">
            <strong>Erro:</strong> @MensagemErro
        </div>
        <a href="/modosentrega" class="btn btn-secondary mt-3">Voltar à Lista</a>
    }
    else
    {
        <h3 class="text-danger">Tem a certeza? Esta ação é irreversível.</h3>
    }
    <hr />

    @if (modoentrega is null)
    {
        <p><em>A carregar...</em></p>
    }
    else
    {
        <div class="card border-danger mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center gap-4">
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                        <i class="bi bi-truck fs-1 text-muted"></i>
                    </div>

                    <div>
                        <h4 class="card-title fw-bold">@modoentrega.Nome</h4>
                        <p class="card-text text-muted mb-1">
                            <strong>Detalhe:</strong> @(modoentrega.Detalhe ?? "-")
                        </p>
                        <span class="badge bg-secondary">ID: @modoentrega.Id</span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0 pb-3">
                @if (string.IsNullOrEmpty(MensagemErro))
                {
                    <EditForm Model="modoentrega" OnValidSubmit="DeleteModo" FormName="delete_modo">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Confirmar Eliminação
                        </button>
                        <a href="/modosentrega" class="btn btn-outline-secondary">Cancelar</a>
                    </EditForm>
                }
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    private ModoEntrega? modoentrega;
    private string? MensagemErro;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        modoentrega = await context.ModosEntrega.FirstOrDefaultAsync(m => m.Id == Id);

        if (modoentrega is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteModo()
    {
        try
        {
            using var context = DbFactory.CreateDbContext();

            // Verificar se existem produtos associados
            bool temProdutos = await context.Produtos.AnyAsync(p => p.ModoEntregaId == Id);

            if (temProdutos)
            {
                MensagemErro = "Não pode apagar este modo de entrega porque existem produtos associados.";
                return;
            }

            var modoParaApagar = await context.ModosEntrega.FindAsync(Id);
            if (modoParaApagar != null)
            {
                context.ModosEntrega.Remove(modoParaApagar);
                await context.SaveChangesAsync();
                NavigationManager.NavigateTo("/modosentrega");
            }
        }
        catch (Exception ex)
        {
            MensagemErro = "Erro ao apagar: " + ex.Message;
        }
    }
}