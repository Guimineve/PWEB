@page "/vendas"

@attribute [Authorize(Roles = "Admin,Funcionario")]

@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@implements IAsyncDisposable

<PageTitle>Gestão de Vendas</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="m-0 fw-bold text-primary">Gestão de Vendas</h3>
    </div>

    <div class="card bg-light border-0 mb-4">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Cliente</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Nome ou Email..."
                               @bind="FiltroCliente" @bind:event="oninput" @onkeyup="CarregarDados" />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Estado</label>
                    <select class="form-select" @bind="FiltroEstado" @bind:after="CarregarDados">
                        <option value="">Todos</option>
                        <option value="Pendente">Pendente</option>
                        <option value="Paga">Paga</option>
                        <option value="Expedida">Expedida</option>
                        <option value="Anulada">Anulada</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold">Ordenar por</label>
                    <select class="form-select" @bind="OrdemOrdenacao" @bind:after="CarregarDados">
                        <option value="recente">Mais Recentes</option>
                        <option value="antiga">Mais Antigas</option>
                        <option value="valor_max">Valor (Maior &rarr; Menor)</option>
                        <option value="valor_min">Valor (Menor &rarr; Maior)</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (VendasPaginadas == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>A carregar vendas...</p>
        </div>
    }
    else if (!VendasPaginadas.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-cart-x fs-1 text-muted"></i>
            <h5 class="mt-3">Nenhuma venda encontrada.</h5>
        </div>
    }
    else
    {
        <div class="table-responsive bg-white rounded shadow-sm p-3">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th>#ID</th>
                        <th>Data/Hora</th>
                        <th>Cliente</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Itens</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in VendasPaginadas)
                    {
                        <tr>
                            <td class="text-muted small">#@item.Id</td>
                            <td>@item.Data.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="fw-bold">
                                @(item.Cliente != null ? item.Cliente.UserName : "Desconhecido")
                            </td>
                            <td class="text-success fw-bold">@item.ValorTotal.ToString("C2")</td>
                            <td>
                                @if (item.Estado == "Pendente")
                                {
                                    <span class="badge bg-warning text-dark">Pendente</span>
                                }
                                else if (item.Estado == "Paga")
                                {
                                    <span class="badge bg-success">Paga</span>
                                }
                                else if (item.Estado == "Expedida")
                                {
                                    <span class="badge bg-primary">Expedida</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@item.Estado</span>
                                }
                            </td>
                            <td>@(item.Detalhes?.Count ?? 0)</td>
                            <td class="text-end" style="white-space: nowrap;">
                                <a href="vendas/edit?id=@item.Id" title="Processar Venda" class="me-2">
                                    <img src="/img/editicon.png" style="height:30px" alt="Processar" />
                                </a>
                                <a href="vendas/details?id=@item.Id" title="Detalhes" class="me-2">
                                    <img src="/img/detailsicon.png" style="height:30px" alt="Detalhes" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <span class="text-muted small">
                A mostrar @VendasPaginadas.Count registos (Página @PaginaAtual de @TotalPaginas)
            </span>
            <div class="btn-group">
                <button class="btn btn-outline-secondary btn-sm" disabled="@(PaginaAtual == 1)" @onclick="PaginaAnterior">
                    <i class="bi bi-chevron-left"></i> Anterior
                </button>
                <button class="btn btn-outline-secondary btn-sm" disabled="@(PaginaAtual == TotalPaginas || TotalPaginas == 0)" @onclick="ProximaPagina">
                    Próximo <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationDbContext context = default!;
    private List<Encomenda>? VendasPaginadas;

    private string FiltroCliente = "";
    private string FiltroEstado = "";
    private string OrdemOrdenacao = "recente";

    private int PaginaAtual = 1;
    private int TamanhoPagina = 10;
    private int TotalPaginas = 1;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        var query = context.Encomendas
            .Include(e => e.Cliente)
            .Include(e => e.Detalhes)
            .AsQueryable();

        // Filtros
        if (!string.IsNullOrEmpty(FiltroCliente))
        {
            query = query.Where(e => e.Cliente.UserName.Contains(FiltroCliente) || e.Cliente.Email.Contains(FiltroCliente));
        }

        if (!string.IsNullOrEmpty(FiltroEstado))
        {
            query = query.Where(e => e.Estado == FiltroEstado);
        }

        // Ordenação
        query = OrdemOrdenacao switch
        {
            "antiga" => query.OrderBy(e => e.Data),
            "valor_max" => query.OrderByDescending(e => e.ValorTotal),
            "valor_min" => query.OrderBy(e => e.ValorTotal),
            _ => query.OrderByDescending(e => e.Data)
        };

        // Paginação
        int totalItens = await query.CountAsync();
        TotalPaginas = (int)Math.Ceiling(totalItens / (double)TamanhoPagina);
        if (TotalPaginas == 0) TotalPaginas = 1;
        if (PaginaAtual > TotalPaginas) PaginaAtual = TotalPaginas;

        VendasPaginadas = await query
            .Skip((PaginaAtual - 1) * TamanhoPagina)
            .Take(TamanhoPagina)
            .ToListAsync();
    }

    private async Task PaginaAnterior() { if (PaginaAtual > 1) { PaginaAtual--; await CarregarDados(); } }
    private async Task ProximaPagina() { if (PaginaAtual < TotalPaginas) { PaginaAtual++; await CarregarDados(); } }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}